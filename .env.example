# ARCANUM 环境变量配置

# JWT密钥（生产环境请修改）
JWT_SECRET=arcanum-secret-change-in-production

# JWT有效期（秒），默认7天
JWT_EXPIRES=604800

# 管理员UID
ADMIN_UID=ARCANUM-ADMIN-0000

# 管理员密码（生产环境请修改）
ADMIN_PASSWORD=admin123456

# 数据库连接
DATABASE_URL=sqlite:arcanum.db?mode=rwc

# 最大文件大小（字节），默认5MB
MAX_FILE_SIZE=5242880

# 速率限制：每个窗口允许的消息数
RATE_LIMIT_MESSAGES=10

# 速率限制：窗口大小（秒）
RATE_LIMIT_WINDOW=60

# 服务端口
PORT=3000
